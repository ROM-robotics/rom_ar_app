<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- WebView (full screen) -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Floating buttons overlay -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="4dp">

        <!-- Settings button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSettings"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/settings"
            android:backgroundTint="@color/fab_background"
            app:fabSize="mini"
            app:tint="@color/white"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

        <!-- Refresh button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRefresh"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:src="@drawable/ic_refresh"
            android:contentDescription="@string/refresh"
            android:backgroundTint="@color/fab_background"
            app:fabSize="mini"
            app:tint="@color/white"
            xmlns:app="http://schemas.android.com/apk/res-auto" />
    </LinearLayout>

    <!-- Native Emergency Stop (top-right) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEmergencyStop"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_stop"
        android:contentDescription="@string/emergency_stop"
        android:backgroundTint="@color/emergency_red"
        app:fabSize="normal"
        app:tint="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <ProgressBar
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminateTint="@color/accent_cyan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/connecting"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/loading_hint"
                android:textColor="#888888"
                android:textSize="13sp"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <!-- Error Overlay -->
    <FrameLayout
        android:id="@+id/errorOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/connection_failed"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/connection_failed_hint"
                android:textColor="#888888"
                android:textSize="14sp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetry"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/retry"
                android:backgroundTint="@color/accent_cyan" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenSettings"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/open_settings"
                android:textColor="@color/accent_cyan"
                app:strokeColor="@color/accent_cyan"
                xmlns:app="http://schemas.android.com/apk/res-auto" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
