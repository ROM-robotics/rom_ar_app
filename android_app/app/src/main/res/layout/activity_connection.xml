<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    tools:context=".ConnectionActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface_dark"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤– Robot Connection"
                android:textColor="@color/accent_cyan"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="@string/connection_description"
                android:textColor="#888888"
                android:textSize="14sp" />

            <!-- Robot IP -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutRobotIp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/hint_robot_ip"
                app:boxStrokeColor="@color/accent_cyan"
                app:hintTextColor="@color/accent_cyan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editRobotIp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:text="192.168.1.100" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- WebSocket Port -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutWsPort"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/hint_ws_port"
                app:boxStrokeColor="@color/accent_cyan"
                app:hintTextColor="@color/accent_cyan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editWsPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:text="9090" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Web Server Port -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutWebPort"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/hint_web_port"
                app:boxStrokeColor="@color/accent_cyan"
                app:hintTextColor="@color/accent_cyan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editWebPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:text="8080" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Preview -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardCornerRadius="8dp"
                app:strokeColor="#333333"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connection Preview"
                        android:textColor="#888888"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="monospace"
                        android:textColor="@color/accent_cyan"
                        android:textSize="13sp"
                        android:text="Web App: http://192.168.1.100:8080\nROS Bridge: ws://192.168.1.100:9090" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestConnection"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_connection"
                android:textColor="@color/accent_cyan"
                app:strokeColor="@color/accent_cyan"
                app:icon="@drawable/ic_wifi"
                app:iconTint="@color/accent_cyan" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/save_connect"
                android:backgroundTint="@color/accent_cyan"
                android:textColor="@color/background_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_defaults"
                android:textColor="#888888" />

            <!-- Company branding -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="@string/company_name"
                android:textColor="#555555"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
