<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Theme.ARRobotController" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_cyan</item>
        <item name="colorPrimaryVariant">#0096CC</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/accent_cyan</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Fullscreen Theme for Main Activity -->
    <style name="Theme.ARRobotController.Fullscreen" parent="Theme.ARRobotController">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
